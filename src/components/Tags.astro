---
export interface Props {
  tags: string[]
}

const { tags } = Astro.props
---

<div class='tags'>
  {
    tags.map((tag) => (
      <a href={`/tags/${tag}/`} class='tag'>
        {tag}
      </a>
    ))
  }
</div>

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -0.5em;
  }
  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 0.9em;
    background-color: #f8fcfd;
    color: #4c4c4c;
    text-decoration: none;
    transition: background-color 0.15s ease;
  }
  .tag:hover {
    background-color: #e8f4f7;
  }
</style>
