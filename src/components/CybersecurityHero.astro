---
import Clients from './Clients.astro'
import Container from './Container.astro'
---

<Container>
  <div
    class='relative flex flex-col-reverse items-center md:flex-row'
    id='hero'
  >
    <div class='row items-center py-5 md:w-6/12 md:pb-20 md:pt-32'>
      <div class='text-left space-y-3'>
        <h1 class='text-5xl font-medium leading-none md:text-6xl'>
          Safeguard <br />your business <br />from cyber threats
        </h1>
        <p class='mt-6 mb-8 text-xl font-normal leading-7 sm:mb-12'>
          We provide specialized solutions tailored to your unique needs,
          ensuring robust protection for your digital assets and peace of mind.
        </p>
        <a
          class='px-9 py-5 bg-zinc-900 hover:bg-white text-white hover:text-black border rounded-2xl justify-items-center md:justify-items-start gap-2.5 inline-flex'
          rel='noopener noreferrer'
          href='https://calendly.com/umesh-ganapathy/30min'
          target='_blank'
        >
          <h2 class='text-center text-xl font-normal leading-7'>
            Book a consultation
          </h2>
        </a>
      </div>
    </div>
    <div class='flex items-center py-5 md:w-6/12 md:pb-20 md:pt-10'>
      <img
        src='/services/collabwrite-cybersecurity-services.svg'
        width='100%'
        alt='Collabwrite Cybersecurity Services'
      />
    </div>
  </div>
  <Clients />
</Container>
